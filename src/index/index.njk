{%- for post in collections.post -%}
  <article>
    <header>
      <h1>
        <a href="{{post.url}}">{{post.data.title}}</a>
      </h1>

      <time>{{post.date | formatDate }}</time>
    </header>

    <p>{{post.templateContent | createExcerpt}}</p>

    <a class="button" href="{{post.url}}">
        Weiterlesen
    </a>
  </article>
{%- endfor -%}
